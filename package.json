{
  "name": "sensor-plug",
  "version": "3.0.0",
  "description": "A micro library to access device sensors via javascript.",
  "main": "dist/sensorplug.js",
  "scripts": {
    "test": "mocha src/sensorplug.test.js --compilers js:babel-register",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "build:umd": "webpack --output-filename sensorplug.umd.js",
    "build:umd.min": "webpack --output-filename sensorplug.umd.min.js -p"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/menchacaeli/sensorplug.git"
  },
  "keywords": [
    "device",
    "sensors",
    "javascript",
    "mobile"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "Eli Menchaca <menchacaeli@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/menchacaeli/sensorplug/issues"
  },
  "homepage": "https://github.com/menchacaeli/sensorplug#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-loader": "7.1.2",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "json-loader": "0.5.7",
    "mocha": "4.0.1",
    "npm-run-all": "4.1.2",
    "nyc": "11.3.0",
    "rimraf": "2.6.2",
    "webpack": "3.8.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
